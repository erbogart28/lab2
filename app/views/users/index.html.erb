
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><button type= "button" class="btn btn-primary"><%= link_to 'Show', user %></button></td>
        <td><button type= "button" class="btn btn-primary"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><button type= "button" class="btn btn-primary"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type = button class ="btn-default"><%= link_to 'New User', new_user_path %></button>
